@using Chat.Data.ModelsDto
@using Chat.Data.Models
@model Chat.Data.Common.GetMessageResult

@{
    ViewData["Title"] = "Общий чат";

    var message = new MessageDto { MessageType = EMessageType.Public };
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-9">
        <div class="card">
            <div class="card-header"><h4>@ViewBag.Title - сообщения видят все пользователи</h4></div>
            <div class="card-body fixed-panel">
                @foreach (var item in Model.Messages)
                {
                    <div class="media">
                        <div class="media-body">
                            <p>
                                <b>@Html.DisplayFor(modelItem => item.User.UserName)</b>
                                <small class="text-muted">[@item.CreateDate.ToString("dd.MM.yyyy HH:mm")]</small>
                                @Html.DisplayFor(modelItem => item.Text)
                            </p>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div id="AddMessage">
            <form asp-action="Add" asp-controller="Chat" method="POST" asp-antiforgery="true">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="@message.MessageType" />
                <div class="form-group">
                    <label asp-for="@message.Text" class="control-label"></label>
                    <input asp-for="@message.Text" class="form-control" />
                    <span asp-validation-for="@message.Text" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Отправить" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-header"><h5>Пользователи</h5></div>
            <div class="card-body fixed-panel">
                @*@Html.Action("UserList")*@
            </div>
        </div>
        @*@if (ViewBag.HaveUnreadMsg)
        {
            <p class="text-info">
                У вас непрочитанные сообщения от:<br />
                <b>@ViewBag.MessageFrom</b>
            </p>
        }*@
        <br />
        <a asp-action="Index" class="btn btn-outline-secondary">Обновить страницу</a>
    </div>
</div>